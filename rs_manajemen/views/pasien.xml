<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- List View -->
        <record id="view_pasien_list" model="ir.ui.view">
            <field name="name">pasien.list</field>
            <field name="model">cdn.pasien</field>
            <field name="arch" type="xml">
                <list>
                    <field name="no_rkm_medis" />
                    <field name="name" />
                    <field name="no_ktp" />
                    <field name="jk" />
                    <field name="tgl_lahir" />
                    <field name="mobile" />
                    <field name="alamat" />
                </list>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_pasien_form" model="ir.ui.view">
            <field name="name">pasien.form</field>
            <field name="model">cdn.pasien</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_activate_account"
                            string="Aktifkan Akun"
                            type="object"
                            class="oe_highlight" />
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box" />
                        <field name="image_1920" widget="image" class="oe_avatar"
                            options="{'preview_image': 'image_128'}" />
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" />
                            <h1>
                                <field name="name" placeholder="Nama Dokter" />
                            </h1>
                        </div>
                        <div class="oe_title">
                            <label for="no_rkm_medis" class="oe_edit_only" />
                            <h2>
                                <field name="no_rkm_medis" readonly="1" />
                            </h2>
                        </div>
                        <group>
                            <group>
                                <field name="no_ktp" required="1" />
                                <field name="jk" required="1" />
                                <field name="tgl_lahir" required="1" />
                                <field name="tmp_lahir" required="1" />
                                <field name="nm_ibu" required="1" />
                                <field name="gol_darah" />
                            </group>
                            <group>
                                <field name="agama" />
                                <field name="stts_nikah" />
                                <field name="umur" required="1" />
                                <field name="pnd" />
                                <field name="mobile" required="1" />
                                <field name="email" />
                                <field name="tgl_daftar" required="1" />
                            </group>
                        </group>
                        <notebook>
                            <page string="Alamat dan Wilayah">
                                <group>
                                    <group>
                                        <field name="alamat" required="1" />
                                        <field name="kd_kel" required="1" />
                                        <field name="kd_kec" required="1" />
                                    </group>
                                    <group>
                                        <field name="kd_kab" required="1" />
                                        <field name="kd_prop" required="1" />
                                    </group>
                                </group>
                            </page>
                            <page string="Data Keluarga">
                                <group>
                                    <group>
                                        <field name="keluarga" />
                                        <field name="namakeluarga" />
                                    </group>
                                    <group>
                                        <field name="pekerjaan" />
                                        <field name="kd_pj" />
                                        <field name="no_peserta" />
                                    </group>
                                </group>
                            </page>
                            <page string="Data Penjamin">
                                <group>
                                    <group>
                                        <field name="pekerjaanpj" />
                                        <field name="alamatpj" />
                                        <field name="kelurahanpj" />
                                        <field name="kecamatanpj" />
                                    </group>
                                    <group>
                                        <field name="kabupatenpj" />
                                        <field name="propinsipj" />
                                        <field name="perusahaan_pasien" />
                                    </group>
                                </group>
                            </page>
                            <page string="Informasi Tambahan">
                                <group>
                                    <group>
                                        <field name="suku_bangsa" />
                                        <field name="bahasa_pasien" />
                                        <field name="cacat_fisik" />
                                    </group>
                                    <group>
                                        <field name="nip" />
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Kanban View -->
        <record id="view_pasien_kanban" model="ir.ui.view">
            <field name="name">pasien.kanban</field>
            <field name="model">cdn.pasien</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="name" />
                    <field name="no_rkm_medis" />
                    <field name="jk" />
                    <field name="tgl_lahir" />
                    <field name="mobile" />
                    <field name="image_128" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click d-flex align-items-center" style="gap=10px">
                                <!-- Gambar -->
                                <div class="kanban-image-container"
                                   >
                                    <field name="avatar_128" class="w-100" widget="image"
                                        options="{'img_class': 'object-fit-contain'}" />
                                </div>
                                <!-- Detail Teks -->
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title">
                                        <field name="name" />
                                    </strong>
                                    <div>
                                        <strong>No RM: </strong>
                                        <field name="no_rkm_medis" />
                                    </div>
                                    <div>
                                        <span>
                                            <field name="jk" />
                                        </span>
                                        - <span>
                                            <field name="tgl_lahir" />
                                        </span>
                                    </div>
                                    <div>
                                        <span>
                                            <field name="mobile" />
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Search View -->
        <record id="view_pasien_search" model="ir.ui.view">
            <field name="name">pasien.search</field>
            <field name="model">cdn.pasien</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" />
                    <field name="no_rkm_medis" />
                    <field name="no_ktp" />
                    <field name="mobile" />
                    <separator />
                    <group expand="0" string="Group By">
                        <filter string="Jenis Kelamin" name="jk" context="{'group_by':'jk'}" />
                        <filter string="Golongan Darah" name="gol_darah"
                            context="{'group_by':'gol_darah'}" />
                    </group>
                </search>
            </field>
        </record>

        <!-- Action -->
        <record id="action_pasien" model="ir.actions.act_window">
            <field name="name">Data Pasien</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">cdn.pasien</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="search_view_id" ref="view_pasien_search" />
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Buat Data Pasien Baru
                </p>
                <p>
                    Gunakan menu ini untuk mengelola data pasien.
                </p>
            </field>
        </record>

        <!-- Menu -->
        <menuitem id="menu_pasien"
            name="Data Pasien"
            parent="manajemen_menu_root"
            action="action_pasien"
            sequence="10" />
    </data>
</odoo>