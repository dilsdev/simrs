<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- list view -->
        <record id="view_cdn_ref_propinsi_list" model="ir.ui.view">
            <field name="name">cdn_ref_propinsi_list</field>
            <field name="model">cdn.ref_propinsi</field>
            <field name="type">list</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <list string="Ref provinsi">
                    <field name="name" />
                    <field name="keterangan" />
                </list>
            </field>
        </record>
        <!-- form view -->
        <record id="view_cdn_ref_propinsi_form" model="ir.ui.view">
            <field name="name">cdn_ref_propinsi_form</field>
            <field name="model">cdn.ref_propinsi</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Ref provinsi">
                    <header>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Nama Provinsi"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="keterangan" />
                            </group>
                            <group>
                            </group>
                        </group>
                        <notebook>
                            <page string="Kota">
                                <field name="kota_ids"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_cdn_ref_propinsi_search" model="ir.ui.view">
            <field name="name">cdn_ref_propinsi</field>
            <field name="model">cdn.ref_propinsi</field>
            <field name="arch" type="xml">
                <search string="Ref provinsi">

                    <filter string="Nama" name="filter_by_name" domain="[('name','=','')]" />
                    <filter string="Keterangan" name="filter_by_keterangan" domain="[('keterangan','=','')]" />
                    <field name="name" select="True"/>
                    <field name="keterangan" select="True"/>
                    <group string="Group By..">
                    </group>
                </search>
            </field>
        </record>
        <!-- action window -->
        <record id="action_cdn_ref_propinsi" model="ir.actions.act_window">
            <field name="name">Ref propinsi</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">cdn.ref_propinsi</field>
            <field name="view_mode">list,form</field>
            <field name="context">{"search_default_fieldname":1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Ref propinsi
                </p><p>
                Click the Create button to add a new Ref propinsi
                </p>
            </field>
        </record>

        <menuitem id="menu_cdn_ref_propinsi" name="Provinsi" parent="data_wilayah_categ"
            action="action_cdn_ref_propinsi" sequence="1" />
    </data>
</odoo>