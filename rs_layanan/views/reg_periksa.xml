<odoo>
    <data>
        <!-- List View -->
        <record id="view_cdn_reg_periksa_list" model="ir.ui.view">
            <field name="name">cdn.reg_periksa.list</field>
            <field name="model">cdn.reg_periksa</field>
            <field name="arch" type="xml">
                <list decoration-info="stts == 'Sudah'" decoration-warning="stts == 'Belum'"
                    decoration-danger="stts == 'Batal'">
                    <field name="no_rawat" />
                    <field name="tgl_registrasi" />
                    <field name="jam_reg" />
                    <field name="kd_dokter" />
                    <field name="no_rkm_medis" />
                    <field name="kd_poli" />
                    <field name="biaya_reg" />
                    <field name="stts" />
                    <field name="stts_daftar" />
                    <field name="status_lanjut" />
                    <field name="status_bayar" />
                    <field name="status_poli" />
                </list>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_cdn_reg_periksa_form" model="ir.ui.view">
            <field name="name">cdn.reg_periksa.form</field>
            <field name="model">cdn.reg_periksa</field>
            <field name="arch" type="xml">
                <form string="Registrasi Pemeriksaan">
                    <header>
                        <field name="stts" widget="statusbar" statusbar_visible="Belum,Sudah,Batal" />
                        <!-- Updated button visibility using direct invisible condition -->
                        <button name="action_confirm" type="object" string="Confirm"
                            class="oe_highlight" invisible="stts != 'Belum'" />
                        <button name="action_cancel" type="object" string="Cancel"
                            class="oe_highlight" invisible="stts != 'Belum'" />
                    </header>
                    <sheet>
                        <notebook>
                            <!-- Tab 1: Informasi Dasar -->
                            <page string="Informasi Dasar">
                                <group>
                                    <group>
                                        <field name="no_reg" />
                                        <field name="no_rawat" />
                                        <field name="tgl_registrasi" />
                                        <field name="jam_reg" />
                                        <field name="kd_dokter" />
                                    </group>
                                    <group>
                                        <field name="no_rkm_medis" />
                                        <field name="kd_poli" />
                                        <field name="biaya_reg" />
                                        <field name="stts_daftar" />
                                        <field name="status_lanjut" />
                                    </group>
                                </group>
                            </page>
                            <!-- Tab 2: Penanggung Jawab -->
                            <page string="Penanggung Jawab">
                                <group>
                                    <group>
                                        <field name="p_jawab" readonly="1" />
                                        <field name="hubunganpj" readonly="1" />
                                    </group>
                                    <group>
                                        <field name="almt_pj" readonly="1" />
                                        <field name="kd_pj" />
                                    </group>
                                </group>
                            </page>
                            <!-- Tab 3: Informasi Tambahan -->
                            <page string="Informasi Tambahan">
                                <group>
                                    <group>
                                        <field name="umurdaftar" />
                                        <field name="sttsumur" />
                                    </group>
                                    <group>
                                        <field name="status_bayar" />
                                        <field name="status_poli" />
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action -->
        <record id="action_cdn_reg_periksa" model="ir.actions.act_window">
            <field name="name">Registrasi Pemeriksaan</field>
            <field name="res_model">cdn.reg_periksa</field>
            <field name="view_mode">list,form</field>
        </record>

        <!-- Menu Item -->
        <menuitem id="menu_cdn_reg_periksa" parent="layanan_menu_root"
            name="Data Registrasi" action="action_cdn_reg_periksa" sequence="10" />
    </data>
</odoo>
